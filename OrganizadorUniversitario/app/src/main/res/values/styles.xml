<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>


    <style name="ButtonCancelar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/boton_redondeado_cancelar</item>
    </style>

    <style name="ButtonAceptar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/boton_redondeado_aceptar</item>
    </style>



</resources>
