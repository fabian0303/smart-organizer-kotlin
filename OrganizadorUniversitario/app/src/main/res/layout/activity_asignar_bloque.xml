<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1px"
    android:orientation="vertical"
    tools:context=".Vistas.agregarCursoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Asignar curso"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="clip_horizontal|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/libro2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/seleccioneCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione un curso:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/curso_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/diaText"
                    android:layout_width="58dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Selecciona el dÃ­a:"

                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <Spinner
                    android:id="@+id/dia_spinner"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_border"
                    android:spinnerMode="dialog" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="400dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Selecciona los bloques:"

                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <Button
                    android:id="@+id/bloque_button"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondeado_color_primario_dark"
                    android:textColor="#FFFFFF"
                    tools:text="Ninguno" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelarCursoBtn"
                style="@style/ButtonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Cancelar" />

            <Button
                android:id="@+id/asignarCursoBtn"
                style="@style/ButtonAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Asignar" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

