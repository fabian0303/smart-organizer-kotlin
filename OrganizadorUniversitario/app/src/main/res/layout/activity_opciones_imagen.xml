<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vistas.NavegacionCurso.OpcionesImagenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/viewImagen"
            android:layout_width="321dp"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:elevation="20dp"
            app:srcCompat="@drawable/icono_app" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/agregarDesdeGaleria"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/viewImagen"
            app:srcCompat="@drawable/galeria_ico"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="20dp"
            android:elevation="40dp"/>

        <ImageButton
            android:id="@+id/tomarFoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toEndOf="@+id/agregarDesdeGaleria"
            app:layout_constraintTop_toBottomOf="@+id/viewImagen"
            app:srcCompat="@drawable/camara"
            android:elevation="40dp"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/cancelar"
            style="@style/ButtonCancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintEnd_toStartOf="@+id/guardarImg"
            app:layout_constraintTop_toBottomOf="@+id/agregarDesdeGaleria" />
        <Button
            android:id="@+id/guardarImg"
            style="@style/ButtonAceptar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Guardar imagen"
            app:layout_constraintTop_toBottomOf="@+id/tomarFoto"
            />

    </LinearLayout>

</LinearLayout>