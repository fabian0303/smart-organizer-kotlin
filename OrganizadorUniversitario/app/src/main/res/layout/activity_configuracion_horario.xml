<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1px"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Vistas.configurarHorarioActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/configurar_titulo"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Configurar horario"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="clip_horizontal|center_horizontal"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/icono_app" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/horaInicio"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ingrese hora de inicio de clases:"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <EditText
                    android:id="@+id/selectHoraInicio"
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="Ej: 8:30"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textColor="@color/color_letras2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/duracionBloque"
                    android:layout_width="399dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ingrese duracion de los bloques: (en horas)"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <EditText
                    android:id="@+id/selectDuracionBloque"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="Ej: 1"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/color_letras2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/minutosReceso"
                    android:layout_width="399dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ingrese minutos de receso entre bloques:"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <EditText
                    android:id="@+id/selectMinutosReceso"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="Ej: 10"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/color_letras2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/numeroBloques"
                    android:layout_width="399dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ingrese la cantidad de bloques:"
                    android:textSize="15dp"
                    android:textStyle="bold|normal" />

                <EditText
                    android:id="@+id/selectNumeroBloques"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:hint="Ej: 11"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/color_letras2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelarHorarioBtn"
                style="@style/ButtonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Cancelar" />

            <Button
                android:id="@+id/aceptarHorarioBtn"
                style="@style/ButtonAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Confirmar" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>