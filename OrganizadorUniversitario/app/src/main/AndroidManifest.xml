<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tecnologiasmoviles.organizadoruniversitario">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Vistas.NavegacionCurso.OpcionesImagenActivity"></activity>
        <activity android:name=".Vistas.NavegacionCurso.Home_CursoActivity" />
        <activity android:name=".Vistas.agregarNotaActivity" />
        <activity android:name=".Vistas.agregarCursoActivity" />
        <activity android:name=".Vistas.asignarBloqueActivity" />
        <activity
            android:name=".Adaptadores.CursoAdapter"
            tools:ignore="Instantiatable" />
        <activity android:name=".Vistas.NotaDetalle" />
        <activity android:name=".GradeActivity" />
        <activity android:name=".ScheduleActivity" />
        <activity android:name=".Vistas.HomeActivity" />
        <activity
            android:name=".Vistas.AuthActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>